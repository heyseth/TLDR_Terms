{
  "manifest_version": 3,
  "name": "TLDR Terms",
  "version": "1.0",
  "description": "Use AI to automatically summarize and understand terms of service.",
  "permissions": [
    "activeTab",
    "sidePanel",
    "*://localhost:*/*"
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fuzzySearch.js", "listSearchHandler.js", "showdown.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}