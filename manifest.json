{
  "manifest_version": 3,
  "name": "TLDR Terms",
  "version": "1.0",
  "description": "Use AI to automatically summarize and understand terms of service.",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["icons/*.png"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "./js/serviceWorker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/server.js", "./js/fuzzySearch.js", "./js/listSearchHandler.js", "./js/showdown.min.js", "./js/termsDetector.js", "./js/buttonInserter.js", "./js/main.js"],
      "css": ["./css/styles.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' http://ec2-3-17-81-212.us-east-2.compute.amazonaws.com:5000 http://3.17.81.212:5000; object-src 'self'"
  }
}