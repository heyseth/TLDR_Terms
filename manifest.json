{
  "manifest_version": 3,
  "name": "TLDR Terms",
  "version": "1.0",
  "description": "Use AI to automatically summarize and understand terms of service.",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["showdown.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}